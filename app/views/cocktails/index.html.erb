  <div class="container">
    <div class="cards">
      <div class="row">
        <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-3">
          <div class="card">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %>
  </div>
