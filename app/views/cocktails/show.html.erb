<h2><%= @cocktail.name %></h2>
<% @doses.each do |d| %>
  <%= d.ingredient.name %>
  -
  <%= d.description %>
  <%= link_to 'Delete', dose_path(d),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <br>

<% end %>
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), {class: "btn btn-primary"} %>
<%= link_to 'Back', cocktails_path, {class: "btn btn-default"} %>
